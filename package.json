{
  "name": "geocontext-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for dynamic geographic context awareness",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "validate": "tsx scripts/validate.ts",
    "setup": "npm install && npm run build && npm run validate"
  },
  "keywords": [
    "mcp",
    "geography",
    "context",
    "navigation",
    "poi",
    "gis"
  ],
  "author": "GeoContext Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.42.0",
    "@opentelemetry/resources": "^1.21.0",
    "@opentelemetry/sdk-node": "^0.49.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "@turf/turf": "^6.5.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "p-queue": "^7.4.1",
    "rbush": "^3.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/rbush": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nock": "^13.4.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}