# GeoContext MCP Server Configuration

# ============================================================================
# API Keys
# ============================================================================

# OpenRouteService API Key (required for routing)
OPENROUTE_API_KEY=your_openroute_api_key_here

# Mapbox API Key (alternative to OpenRoute)
MAPBOX_API_KEY=

# Optional API Keys for Enhanced Features
WIKIPEDIA_API_KEY=
HISTORIC_MAPS_API_KEY=
WEATHER_API_KEY=

# ============================================================================
# Cache Configuration
# ============================================================================

# Redis URL (optional, uses in-memory cache if not provided)
REDIS_URL=

# Cache TTL in seconds (default: 3600)
CACHE_TTL=3600

# ============================================================================
# Server Configuration
# ============================================================================

PORT=3000
LOG_LEVEL=info
MAX_CONCURRENT_REQUESTS=10

# ============================================================================
# Timeout Configuration (in milliseconds)
# ============================================================================

TIMEOUT_ROUTING_API=60000
TIMEOUT_OSM_API=30000
TIMEOUT_DEFAULT_HTTP=30000
TIMEOUT_TOOL_EXECUTION=120000

# ============================================================================
# Database Configuration (Optional)
# ============================================================================

DATABASE_URL=

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_CROWDSOURCING=false
ENABLE_ML_PREDICTIONS=false
ENABLE_OFFLINE_MODE=false
ENABLE_CACHE=true
ENABLE_TELEMETRY=false